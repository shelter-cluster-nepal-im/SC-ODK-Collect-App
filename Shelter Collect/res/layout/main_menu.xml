    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    >

                    <ImageButton
                        android:id="@+id/enter_data"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:src="@drawable/fill_form_small"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/enter_data"
                        android:layout_marginLeft="20dp"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Fill Form"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/review_data"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/edit_form_small"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/review_data"
                        android:layout_marginLeft="20dp"
                        android:clickable="false"
                        android:text="Edit Form" />
                </RelativeLayout>
            </LinearLayout>


            //row 2

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:dividerHeight="10.0sp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/send_data"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:src="@drawable/send_form_small"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/send_data"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="Send Form" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/get_forms"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/get_form_small"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/get_forms"
                        android:layout_marginLeft="20dp"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Get Forms" />
                </RelativeLayout>
            </LinearLayout>

            <!--<View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/review_spacer" />

            <Button
                android:id="@+id/send_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="21sp" />-->

            //row3
            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/manage_forms"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/delete_form_small"
                        android:layout_marginRight="10dp"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/manage_forms"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="25dp"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Delete Forms" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/assess_map"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/assess_location_small"
                        android:layout_marginRight="10dp"
                        android:background="#f7f6f2"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/assess_map"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="35dp"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:text="Map" />

                </RelativeLayout>
            </LinearLayout>

            <!--<Button
                android:id="@+id/manage_forms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="21sp" />-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/get_forms_spacer" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/review_spacer" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>